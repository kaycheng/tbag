<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-10">

      <div class="d-flex justify-content-between">
        <h3>Welcome, <%= current_user.username %></h3>
        <div>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-sm btn-danger mr-2" %>
          <%= link_to "Dashboard", dashboard_root_path, class: "btn btn-sm btn-secondary" if current_user.admin? %>
        </div>
      </div>
      <ul class="nav nav-tabs mt-3">
        <li class="nav-item">
          <%= link_to "Orders", orders_path, class: "nav-link active text-decoration-none text-dark font-weight-bold" %>
        </li>
        <li class="nav-item">
          <%= link_to "Profile", edit_user_registration_path, class: "nav-link text-decoration-none text-dark" %>
        </li>
      </ul>
      
      <table class="table mt-3">
        <thead>
          <tr>
            <th>Time</th>
            <th>Order</th>
            <th>Status</th>
            <th>Price</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at %></td>
              <td><%= order.num %></td>
              <td><%= order.state %></td>
              <td><%= order.total_price %></td>
              <td>
                <%= link_to "Pay", pay_order_path(order), method: :post, data: { confirm: "Are you sure?" },
                                   class: "btn btn-sm btn-success" if order.may_pay? %>
                <%= link_to "Cancel", cancel_order_path(order), method: :delete, data: { confirm: "Are you sure?"},
                                      class: "btn btn-sm btn-danger" if order.may_cancel? %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
