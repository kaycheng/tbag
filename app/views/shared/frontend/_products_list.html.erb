<section class="product_list">
  <div class="container-fluid">
    <div class="row justify-content-center mt-2">
      <div class="col-12">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4">
          <% products.each do |product| %>
          <div class="col sm-6 md-3 mt-2 mb-2">
            <div class="card h-100 card-col shadow-sm rounded">
              <%= link_to product_path(product), class: "text-decoration-none text-dark" do %>
              <%= image_tag product.cover_image, class: "card-img-top" if product.cover_image.attached? %>
              <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text text-muted"><%= product.sell_price %></p>
                <p class="card-text text-break"><%= truncate(strip_tags(product.content.to_s), length:30) %></p>
              </div>
              <% end %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>