<section class="product_list">
  <div class="container-fluid">
    <div class="row justify-content-around">
      <div class="col-12">
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4">
          <% products.each do |product| %>
            <div class="col-md-3 col-sm-12 mt-2 mb-2">
              <div class="card h-100">
                <%= link_to product_path(product), class: "text-decoration-none text-dark" do %>
                  <%= image_tag product.cover_image, class: "card-img-top" if product.cover_image.attached? %>
                  <div class="card-body">
                    <div class="card-title d-flex justify-content-between">
                      <h5><%= product.name %></h5>
                      <p class="text-muted"><%= product.sell_price %></p>
                    </div>
                    <p class="card-text"><%= truncate(strip_tags(product.content.to_s), length: 30) %></p>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>