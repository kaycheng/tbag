<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <div class="row justify-content-around">
        <% categories.each do |category| %> 
          <div class="col-lg-4 col-md-6 col-sm-12 mt-5 mb-5">
            <div class="card text-center welcome-card" style="width: 16rem;">
              <div class="card-body card-<%= category.name.downcase %>">
                <div class="card-text">
                  <h5 class="card-title"><%= category.name %></h5>
                  <%= link_to "Shop Now!", category, class: "btn btn-info" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>