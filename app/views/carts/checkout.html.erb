<section class="container">
  <h3>Order</h3>
  <%= render 'cart' %>

  <h4 class="mt-5">Recipient Informations</h4>
  <div>
    <%= form_with model: @order do |f| %>
      <div class="form-row">
        <div class="col">
          <%= f.label :recipient, class: "font-weight-bold" %>
          <%= f.text_field :recipient, class: "form-control" %>
        </div>
        <div class="col">
          <%= f.label :tel, class: "font-weight-bold" %>
          <%= f.text_field :tel, class: "form-control" %>
        </div>
        <div class="col">
          <%= f.label :address, class: "font-weight-bold" %>
          <%= f.text_field :address, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :note, class: "font-weight-bold" %>
        <%= f.text_area :note, class: "form-control" %>
      </div>
      <div class="action">
        <%= f.submit "Use Line Pay", class: "btn btn-success", data: {confirm: "Are you sure?"} %>
      </div>
    <% end %>
  </div>
</section>