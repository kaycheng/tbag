<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <h3 class="m-3">Product</h3>
      <div class="mb-3"><%= link_to "Create New Product", new_dashboard_product_path, class: "btn btn-success" %></div>
      
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>List Price</th>
            <th>Sell Price</th>
            <th>On Sell</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= link_to "#{product.name} [ProductCode: #{product.code}]", edit_dashboard_product_path(product) %></td>
              <td><%= product.list_price %></td>
              <td><%= product.sell_price %></td>
              <td><%= product.on_sell %></td>
              <td>
                <%= link_to 'delete', dashboard_product_path(product), method: :delete,
                                      data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>