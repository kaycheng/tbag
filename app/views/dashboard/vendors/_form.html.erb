<div class="container-fluid m-3">
  <div class="row justify-content-center">
    <div class="col-md-8 col-sm-12">
      <%= form_with model: [:dashboard, vendor] do |f| %>
        
        <div class="form-group">
          <%= f.label :title, class: "font-weight-bold" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description, class: "font-weight-bold" %>
          <%= f.text_area :description, rows: '5', class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.check_box :online %>
          <%= f.label :online, class: "font-weight-bold" %>
        </div>
        <div class="action">
          <%= f.submit (f.object.new_record? ? 'Create' : 'Update'), class: 'btn btn-secondary' %>
        </div>

      <% end %>
    </div>
  </div>
</div>